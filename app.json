{
  "expo": {
    "name": "Kamila",
    "slug": "Kamila",
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "kamila",
    "userInterfaceStyle": "automatic",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aslanglobal.kamila",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Bu uygulama AI asistanı ile konuşmak ve sesli mesajlar göndermek için mikrofon erişimine ihtiyaç duyar."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.aslanglobal.kamila",
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-localization",
      "expo-web-browser",
      "expo-video",
      "expo-asset",
      [
        "expo-av",
        {
          "microphonePermission": "Bu uygulama AI asistanı ile konuşmak ve sesli mesajlar göndermek için mikrofon erişimine ihtiyaç duyar."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {}
    }
  }
}
